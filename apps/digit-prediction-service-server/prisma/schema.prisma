datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Prediction {
  createdAt       DateTime @default(now())
  id              String   @id @default(cuid())
  predictedNumber Int?
  result          Boolean?
  ticks           Tick[]
  updatedAt       DateTime @updatedAt
}

model Tick {
  createdAt    DateTime    @default(now())
  id           String      @id @default(cuid())
  prediction   Prediction? @relation(fields: [predictionId], references: [id])
  predictionId String?
  tickDigit    Int?
  updatedAt    DateTime    @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
